<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>PRESTO_ADHOC</name>
            <displayName>Presto_Adhoc</displayName>
            <comment>Presto is an open source distributed SQL query engine for running
                interactive analytic queries against data sources of all sizes ranging
                from gigabytes to petabytes.
            </comment>
            <version>330</version>
            <quickLinksConfigurations>
                <quickLinksConfiguration>
                    <fileName>quicklinks.json</fileName>
                    <default>true</default>
                </quickLinksConfiguration>
            </quickLinksConfigurations>
            <components>
                <component>
                    <name>PRESTO_COORDINATOR_ADHOC</name>
                    <displayName>Presto coordinator AdHoc</displayName>
                    <category>MASTER</category>
                    <cardinality>1</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <recovery_enabled>true</recovery_enabled>
                    <commandScript>
                        <script>scripts/presto_coordinator.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>60</timeout>
                    </commandScript>
                </component>

                <component>
                    <name>PRESTO_WORKER_ADHOC</name>
                    <displayName>Presto worker Adhoc</displayName>
                    <category>SLAVE</category>
                    <cardinality>0+</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <recovery_enabled>true</recovery_enabled>
                    <commandScript>
                        <script>scripts/presto_worker.py</script>
                        <scriptType>PYTHON</scriptType>
                    </commandScript>
                </component>

                <component>
                    <name>PRESTO_CLI_ADHOC</name>
                    <displayName>Presto command line interface</displayName>
                    <category>CLIENT</category>
                    <cardinality>1+</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <commandScript>
                        <script>scripts/presto_cli.py</script>
                        <scriptType>PYTHON</scriptType>
                    </commandScript>
                </component>
            </components>

            <configuration-dependencies>
                <config-type>access-control.properties.adhoc</config-type>
                <config-type>node.properties.adhoc</config-type>
                <config-type>connectors.properties.adhoc</config-type>
                <config-type>jvm.config.adhoc</config-type>
                <config-type>config.properties.adhoc</config-type>
            </configuration-dependencies>

            <themes>
                <theme>
                    <fileName>theme.json</fileName>
                    <default>true</default>
                </theme>
            </themes>

        </service>
    </services>
</metainfo>
